#!/usr/bin/env ruby
require 'json'

def information
  [
    {
      "name" => "time",
      "full_text" => %x[date].chomp!,
      "color" => "#171717" 
    },
  #  {
  #    "name" => "bus",
  #    "full_text" => %x[bt 2> /tmp/err].chomp!,
  #    "separator" => true,
  #    "color" => "#171717" 
  #  }
  ].to_json
end

puts '{ "version": 1 }'
puts "["
puts "[]"


loop do
  puts "," + information
  sleep 20
  STDOUT.flush
end
