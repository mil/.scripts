set $mod Mod1
default_orientation vertical

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font pango:Envy Code R 11
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier Mod1

focus_follows_mouse no
floating_minimum_size 0x0

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+semicolon exec surf
bindsym $mod+Shift+bracketright exec dvol -i 2
bindsym $mod+Shift+bracketleft exec dvol -d 2
bindsym XF86AudioRaiseVolume exec dvol -i 2
bindsym XF86AudioLowerVolume exec dvol -d 2
bindsym XF86AudioPrev exec mediaControl previous
bindsym XF86AudioPlay exec mediaControl pause
bindsym XF86AudioNext exec mediaControl next

bindsym XF86MonBrightnessDown exec sudo brightcontrol down
bindsym XF86MonBrightnessUp exec sudo brightcontrol up
bindsym XF86Launch1 exec xset dpms force suspend
bindsym Next exec light on
bindsym Prior exec light off


