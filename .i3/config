# kill focused window
bindsym $mod+Shift+q kill

# dmenus
bindsym $mod+d exec launchit
bindsym $mod+Shift+p exec pwdhashX
bindsym $mod+Shift+w exec find /etc/network.d -maxdepth 1 -type f -printf '%f\n' | mdmenu netcfg | tr -d '\n' | xargs -0 -I NETWORK sudo netcfg NETWORK

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
