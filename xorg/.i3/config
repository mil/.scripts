# Prefs
set $mod Mod1
default_orientation vertical
floating_modifier Mod1
new_window normal
new_float normal
focus_follows_mouse no
floating_minimum_size 100x100
hide_edge_borders vertical

# Applications
bindsym $mod+Return exec termite -d `xcwd`
bindsym $mod+Shift+Return exec termite


bindsym --whole-window button9 exec "xdotool key ctrl+e"
bindsym $mod+period exec "oscsend osc.udp://127.0.0.1:9901 /pdfifo/dsp/0"
bindsym $mod+slash exec "oscsend osc.udp://127.0.0.1:9901 /pdfifo/dsp/1"

bindsym $mod+minus scratchpad show
bindsym $mod+Shift+minus move scratchpad

# Volume & Special Keys
bindsym XF86AudioRaiseVolume exec ~/.bin/dvol -i 2
bindsym XF86AudioLowerVolume exec ~/.bin/dvol -d 2
bindsym XF86AudioMute exec ~/.bin/dvol -t

bindsym $mod+Shift+Up exec ~/.bin/dvol -i 2
bindsym $mod+Shift+Down exec ~/.bin/dvol -d 2
bindsym $mod+Shift+Left exec ~/.bin/dvol -t


bindsym XF86Launch1 exec xset dpms force suspend

# Menus
bindsym $mod+d exec "dmenu_path | dmenu -fn 'Dina-10' -b -p 'Run:' | xargs -I CMD fish -c 'set -x SURFRAW_graphical true; set -x FROM_DMENU true; CMD' | sh"
bindsym $mod+Shift+d exec "cat ~/.bookmarks | cut -d ' ' -f1 | awk 'NF' | dmenu -fn 'Hack-20' -b -p 'Bookmark:' | xargs -I NAME grep -E '^NAME\s' ~/.bookmarks | tr ' ' '\n' | tail -n 1 | xargs -I URL firefox URL | sh"
bindsym --release $mod+Shift+P exec --no-startup-id ~/.bin/pwdhashX

# Windows Focus
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+a focus parent

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Windows Shift
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right

#bindsym $mod+Shift+Left move left
#bindsym $mod+Shift+Down move down
#bindsym $mod+Shift+Up move up
#bindsym $mod+Shift+Right move right



# Windows Border
bindsym $mod+u border none
bindsym $mod+i border 1pixel
bindsym $mod+o border normal

# Kill
bindsym $mod+Shift+q kill

# Fullscreen
bindsym $mod+f fullscreen

# Layout Modes
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+v split vertical
# Floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle


# Quit
bindsym $mod+Shift+r exec cat ~/.i3/config ~/.i3/supplement_`hostname` > /tmp/i3-tmpconfig; restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Quit i3???' -b 'Yes, exit i3' 'i3-msg exit'"


# Misc
bindsym --release $mod+Shift+C exec scrot -s
bindsym $mod+Shift+U bar mode toggle
bindsym $mod+comma exec toggle_date_enabled


# Workspaces
bindsym $mod+1 workspace number 1; exec oscsend osc.udp://127.0.0.1:9901 /pdfifo/dsp/1
bindsym $mod+2 workspace number 2; exec oscsend osc.udp://127.0.0.1:9901 /pdfifo/dsp/0
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Xresources
#set_from_resource $i3font i3wm.i3font pango:Hack 9.5
#set_from_resource $i3barfont i3wm.i3font pango:Hack 8

bindsym $mod+r mode resize
mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym j resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym Return mode "default"
  bindsym Escape mode "default"
}


bindsym $mod+n mode vi
bindsym --release $mod+n mode default
mode "vi" {
  bindsym space exec xdotool click 3
  #bindsym j exec xdotool click 5
  #bindsym k exec xdotool click 4
  
  bindsym --release j exec xdotool key down
  bindsym --release k exec xdotool key Up
  bindsym Return mode "default"
  bindsym Escape mode "default"
}


# Theme
client.focused #000000 #005b88 #ffffff #000000
client.focused_inactive #000000 #5a5a5a #ffffff #000000
client.unfocused #4a4a4a #d4d4d4 #696969 #000000
client.urgent #000000 #000000 #ffffff #000000
#client.placeholder #ff0000 #ff0000 #ff0000 #ff0000

font pango: Dejavu sans mono 8

# Startup
exec ~/.bin/trackball
exec ~/.bin/yubi off
exec xsetroot -mod 2 2 -fg '#888888' -bg '#ffffff'
exec --no-startup-id keynav
exec xrdb ~/.Xresources
exec ~/.bin/pcs off
exec ~/.bin/pc
