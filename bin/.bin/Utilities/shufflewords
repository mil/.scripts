#!/usr/bin/env ruby
words = []
File.open(ARGV[0], "r") do |f|
  f.each_line do |l|
    l.split(" ").each do |word|
      words.push word
    end
  end
end
shuffled = words.shuffle


return_string = ""
i = 0
while shuffled.length > 0 do
  return_string += shuffled.pop + " "
  i += 1
  if i == 4 then
    i = 0
    return_string = return_string + "\n"
  end
end
puts return_string
