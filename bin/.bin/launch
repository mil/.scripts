#!/usr/bin/env sh
INPUT="$(cat)"
REGEX='(https?|ftp|file)://[-A-Za-z0-9\+&@#/%?=~_|!:,.;]*[-A-Za-z0-9\+&@#/%=~_|]'
REGEX2='.+\.(com|net|org)'

[ -z "$INPUT" ] && exit 1

if [[ $(which $(echo "$INPUT" | tr ' ' '\n' | head -n1)) ]]; then
  fish -C "st -e $INPUT"
elif [[ $INPUT =~ $REGEX || $INPUT =~ $REGEX2 ]]; then
  surf "${INPUT}"
else
  surf " ${INPUT}"
fi
