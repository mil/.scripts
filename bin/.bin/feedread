#!/usr/bin/env sh
#$(echo $DATE | sed 's/ /_/g')"
# E.g. Read one day back:
# cd $(feedread 1)

DATE="$(date +'%Y%m%d' | xargs -IM echo M - $@ | bc)0000"

D="/tmp/sfeed_$DATE"
mkdir -p $D
rm -rf $D/*

cd ~/.sfeed/feeds/
for f in $(ls)
do
  cat $f | tflt $DATE > $D/$f
  [ -s $D/$f ] || rm $D/$f
done
echo $D

